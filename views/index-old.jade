            +palette('background:#f5f3a3;')
            +palette('background:#edeb5e;')
            +palette('background:#e6e219;')
            +palette('background:#a19e12;')
            +palette('background:#5c5a0a;')
          ul.legend-labels
            +palette('background:#a8c8f0;')
            +palette('background:#67a0e4;')
            +palette('background:#2677d9;')
            +palette('background:#1b5398;')
            +palette('background:#0f2f57;')
          ul.legend-labels
            +palette('background:#a5f3f2;')
