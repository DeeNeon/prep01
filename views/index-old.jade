extends layout

mixin results(title, data)
  .panel.panel-default.panel-primary
    .panel-heading
      h3.panel-title #{title}
    .panel-body
      p.data #{data}

mixin palette(color)
  li
    span(style='#{color}')

block content
  //Header
  nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
    .container-fluid
      .navbar-header
        a.navbar-brand(href='#') PREP DE MOVILIZACION DE LOS CABOS
      .navbar-right
        a.navbar-brand(href='#') Powered by Sistemas Najera

  // Map
  #todos.layers
    a#layer-secciones.active-layer-top Todos los Partidos

  #partidos.layers
    a#layer-pan(href='#') PAN
    .span4.collapse-group
      .collapse
        a#layer-cxm(href='#') Compromiso por M&eacute;xico (PRI, PVEM)
        a#layer-mp(href='#') Movimiento Progresista (PRD, PT, MC)
        a#layer-panal(href='#') PANAL
        a#layer-pvem(href='#') PVEM
        a#layer-pri(href='#') PRI
        a#layer-prd(href='#') PRD
        a#layer-pt(href='#') PT
        a#layer-mc(href='#') MC
      button.btn.btn-default.btn-primary Ver mas
        i.glyphicon.glyphicon-chevron-up

  #results
    +results("Secciòn / Mza ", "666")
    +results("Votantes", "100%")
    +results("Jefe / C. de Mza o Sección", "Esperanza Najera")
    +results("Celular", "612-123 4568")

    .panel.panel-default.panel-primary
      .panel-heading
        h3.panel-title Tematización
      .panel-body
        .legend-partidos
          ul.legend-labels
            +palette('background:#b5e3b9;')
